<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
	<module name="TreeWalker">
		<!-- Naming convention for methods -->
		<module name="MethodName">
			<!-- Methods must start with test -->
			<property name="format" value="^test[A-Z][a-zA-Z0-9]*$" />
			<!-- Don't apply to private methods -->
			<property name="applyToPrivate" value="false" />
		</module>

    <!-- Enforce class name format -->
    <module name="TypeName">
      <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/> <!-- Force class names to start with an uppercase letter -->
    </module>
		<!-- You can add more rules here -->
	</module>
</module>
